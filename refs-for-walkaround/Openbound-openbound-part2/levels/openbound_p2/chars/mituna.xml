<sburb description='mituna'>

<dependencies>
	<dependency>dialogs/mitunaDialog.xml</dependency>
</dependencies>

<classes>
	<animation class='mituna-dialog' frameInterval='1' x='-350' y='-524'/>

	<character class='mituna' name='mituna' sx='-50' sy='-110' sWidth='100' sHeight='130' width='40' height='30' sheet='mitunaSheet'  facing='Front' state='skate' >
		<animation name='skate' sheet='mitunaSkate' x='-32' y='-90'/>
		<animation name='crash' sheet='mitunaLand' x='-35' y='-15'/>
	</character>
	
	<action class='beMituna' command='changeChar' name='Be Mituna.'>
		<args>mituna</args>
		<action command='playSong'>
			<args>gameBroSong,6.58</args>
		</action>
	</action>
</classes>

<assets>
