	<asset name='mituna_angry2' type='graphic'>dialogs/mituna/mituna_angry2.png</asset>
	<asset name='mituna_angry' type='graphic'>dialogs/mituna/mituna_angry.png</asset>
	<asset name='mituna_facepalm' type='graphic'>dialogs/mituna/mituna_facepalm.png</asset>
